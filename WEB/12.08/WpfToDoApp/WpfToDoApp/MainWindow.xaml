<Window x:Class="WpfToDoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To-Do List" Height="500" Width="650"
        Background="#f5f5f5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Görev Ekleme Alanı -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
            <TextBox x:Name="txtTask" Width="350" Height="30" FontSize="14" Padding="5"
         Text="Görev Giriniz..." Foreground="Gray"
         Margin="0,0,10,0"/>

            <CheckBox x:Name="chkImportant" Content="Önemli" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="Ekle" Width="80" Click="btnAdd_Click"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <!-- Yapılacaklar Listesi -->
        <GroupBox Header="Yapılacaklar" FontWeight="Bold" FontSize="14" Grid.Row="1" Margin="0,0,0,10"
                  BorderBrush="#4CAF50" BorderThickness="2">
            <ListBox x:Name="listBoxToDo" Background="#DFF0D8" MouseDoubleClick="listBoxToDo_DoubleClick"
                     FontSize="14"/>
        </GroupBox>

        <!-- Yapılanlar Listesi -->
        <GroupBox Header="Yapılanlar" FontWeight="Bold" FontSize="14" Grid.Row="2"
                  BorderBrush="#9E9E9E" BorderThickness="2">
            <ListBox x:Name="listBoxDone" Background="#E0E0E0" FontSize="14"/>
        </GroupBox>
    </Grid>
</Window>
